package net.imagej.ops.features.moments;

import net.imagej.ops.OutputOp;
import net.imagej.ops.statistics.ImageMomentOps;
import net.imglib2.type.numeric.RealType;

/**
 * Static utility class containing built-in ops interfaces.
 * <p>
 * These interfaces are intended to mark all ops using a particular name,
 * regardless of the area of functionality. For example, all ops called "asm"
 * would be marked by implementing the {@code HaralickFeatures.ASMFeature} interface, and
 * annotating them with:
 * </p>
	 * <pre>
	 * @Plugin(type = Op.class, name = ImageMomentFeatures.Moment00.NAME)
	 * </pre>
 *
 * @author Daniel Seebacher, University of Konstanz.
 */
public final class ImageMomentFeatures {

	private ImageMomentFeatures() {
		// NB: Prevent instantiation of utility class.
	}
#foreach ($op in $ops)

	/**
	 * Interface marking implementations of {@link ImageMomentOps.${op.iface}} as  as {@link OutputOp}
	 */
	public interface ${op.iface}Feature<T extends RealType<T>> extends OutputOp<T>, ImageMomentOps.${op.iface} {
		// NB: Marker interface
	}
#end

}
