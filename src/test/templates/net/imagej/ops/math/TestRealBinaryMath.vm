/**
 * Tests the {@link RealBinaryMath} ops.
 *
 * @author Aparna Pal
 */
public class TestRealBinaryMath extends AbstractOpTest {
#foreach ($test in $tests)
#set ($className = "$test.op")

	/** Tests {@link RealBinaryMath.$className}. */
	@Test
	public void test$className() {
	
	RealType two;
	RealType mid;
	Object result;
	ArrayList list;
	double test;
	

	#foreach($type in $types)
		two = new ${type}();
		two.setOne();
		result = ops.run(RealBinaryMath.RealType${className}.class, two, two, two);
		mid = ($type) result;
		test = mid.getRealDouble();
		assertEquals(test, $test.result, 0.0);

	#end

	}
#end

@Test
	public void testBitType()
	{
		RealType two;
		RealType mid;
		Object result;
		ArrayList list;
		double test;
		
		two = new BitType();
	two.setOne();
	result = ops.run(RealBinaryMath.RealTypeAdd.class, two, two, two);
	mid = (BitType) result;
	test = mid.getRealDouble();
	assertEquals(test,0.0, 0.0);
	}
		

}
